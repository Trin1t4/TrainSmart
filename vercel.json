{
  "installCommand": "npm install",
  "buildCommand": "npm run build:shared && cd packages/web && npm run build",
  "outputDirectory": "packages/web/dist",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "beta": true
    }
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    },
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/videos/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/exercises/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    { "source": "/videos/(.*)", "destination": "/videos/$1" },
    { "source": "/exercises/(.*)", "destination": "/exercises/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    {
      "source": "/((?!videos|exercises|assets|api|splash|icons|manifest|sw|workbox|favicon).*)",
      "destination": "/index.html"
    }
  ]
}
